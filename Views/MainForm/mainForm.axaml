<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:My_program.Views"
        x:Class="My_program.Views.MainForm"
        Title="Main Form"
        WindowState="Maximized"
        CanResize="True"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <DockPanel x:Name="MainDockPanel" LastChildFill="True">

        <!-- Navbar จะถูกเพิ่มผ่าน code-behind -->

        <!-- เนื้อหาหลัก - ContentControl ที่จะแสดงหน้าต่างๆ -->
        <ContentControl x:Name="MainContentArea"/>
    </DockPanel>
</Window>
